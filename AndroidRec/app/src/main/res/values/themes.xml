<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recorder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="MyTheme" parent="Lock.Theme">
        <item name="Auth0.HeaderLogo">@drawable/oro_new_logo_black</item>
        <item name="Auth0.HeaderTitle">@string/loginHeader</item>
        <item name="Auth0.HeaderTitleColor">@color/white</item>
        <item name="Auth0.HeaderBackground">@color/black</item>
        <item name="Auth0.PrimaryColor">@color/orange</item>
        <item name="Auth0.DarkPrimaryColor">@color/com_auth0_lock_submit_pressed</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensansmedium</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <!-- Color of the progress (the bar on the right side of the thumb) -->
        <item name="android:progressTint">@color/orange</item>

        <!-- Color of the thumb (the dot) -->
        <item name="android:thumbTint">@color/darkOrange</item>

        <!-- Color of the progress before the thumb -->
        <item name="android:progressBackgroundTint">@color/greySensor</item>
    </style>


</resources>