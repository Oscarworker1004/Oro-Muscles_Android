<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".Fragments.TrainingPlanFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/confirmMuscleButton"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/grey"
        app:cardCornerRadius="30dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/trainingPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_above="@id/customTabs"/>


    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmMuscleButton"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="@string/finish_workout_selection"
        android:backgroundTint="@color/confirmMuscleBlue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:fontFamily="@font/opensansmedium"
        app:cornerRadius="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

</RelativeLayout>